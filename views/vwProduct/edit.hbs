<form method="post">
  <div class="card">
    <h4 class="card-header">
      Edit Category
    </h4>
    <div class="card-body">
      <div class="form-group">
        <label for="txtCatID">ID</label>
        <input type="text" class="form-control" id="txtCatID" name="CatID" readonly value="{{this.category.CatID}}">  
      </div>
      <div class="form-group">
        <label for="txtCatName">Name</label>
        <input type="text" class="form-control" id="txtCatName" name="CatName" autofocus value="{{this.category.CatName}}">
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-outline-success" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-primary" formaction="/admin/categories/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
      <button type="submit" class="btn btn-danger" formaction="/admin/categories/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
    </div>
  </div>
</form>